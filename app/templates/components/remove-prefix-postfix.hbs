<a class="item">
  <i class="minus link-text icon"></i>
</a>
<div class="sixteen wide field">
  {{#ui-dropdown class="selection fluid data-format" selected=properties.prefix_or_postfix onChange=(action "setPrefixPostfixFieldFromDropdown" field) as |execute mapper|}}
    <div class="default text">
      Source column headings
    </div>
    <i class="dropdown icon"></i>
    <div class="menu">
      {{#each remainingColumnHeadings as |heading|}}
        <div class="item" data-value="{{map-value mapper heading}}">
         {{heading}} (example value: {{sample-data user_data=user_data heading=heading}})
        </div>
      {{/each}}
    </div>
 {{/ui-dropdown}}
</div>
<div class="ui form">
   <div class="grouped inline fields">
    <div class="field">
      {{ui-radio name="row_fxn_remove_prefix" label="Remove prefix" value="row_fxn_remove_prefix" current=extractionFunction onChange=(action "setPrefixPostfixFieldFromRadio" field)}}
    </div>
    <div class="field">
      {{ui-radio name="row_fxn_remove_postfix" label="Remove postfix" value="row_fxn_remove_postfix" current=extractionFunction onChange=(action "setPrefixPostfixFieldFromRadio" field)}}
    </div>
  </div>
</div>
{{#if (eq field "street")}}
  <div class="row">
    <div class="ui unit checkbox">
      {{#if this.model.submission.oaFields.street.may_contain_units}}
        <input type="checkbox" checked onClick={{action "setMayContainUnits"}}>
      {{else}}
        <input type="checkbox" onClick={{action "setMayContainUnits"}}>
      {{/if}}
      <label>May contain unit number</label>
    </div>
  </div>
{{/if}}