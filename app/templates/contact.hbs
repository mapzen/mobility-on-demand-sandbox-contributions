<div class="ui text container">
	<h3 class="first headroom">Contact information</h3>
  <div class="form-content">
    <div class="ui tiny message">
      <p> <span class="required"> * </span>
        indicates field is <b> required </b> to proceed </p>
    </div>
  	{{#with (changeset model MaintainerValidator) as |changeset|}}
  		<div class="ui grid">
  			<div class="eight wide column ui form">
  				{{validated-input
  					label="Contact name"
  					propertyName="maintainer_name"
  					placeholder="name"
  					changeset=changeset
  					showErrorState=showErrorState}}
  			</div>
  			<div class="eight wide column ui form">
  				{{validated-input
  					label="Contact email address"
  					propertyName="maintainer_email"
  					placeholder="email address"
  					required=true
  					changeset=changeset
  					showErrorState=showErrorState}}
  			</div>
  		</div>
  		{{nav-buttons showError="showError" sendChangeRoute="changeRoute" back="mapping" next="review" forwardButtonText="Review" changeset=changeset}}
  	{{/with}}
  </div>
</div>